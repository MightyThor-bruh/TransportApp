<h1>Остановки на маршруте</h1>
{{#if isUserPage}}
    <div class="days-nav">
        {{#each stops}}
                <a href="/newbookmark/{{number}}"><button class="bookmark-button">Добавить в избранное</button></a>
        {{/each}}
    </div>
{{/if}}
    <div class="stop-list">
                <ul> 
                    {{#each stops}}
                        <li>
                            <form action="/schedule-weekday" method="POST">
                                <button name="bus_stop" id="bus_stop">{{this}}</button>
                            </form>
                        </li>
                    {{/each}}
                </ul>
           </div>