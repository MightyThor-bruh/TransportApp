<h1>{{text}}</h1>
<div class="center-block">
    <ul id="route-numbers">   
        {{#if isUserPage}}
            {{#each transport}}
                {{#each this}} 
                    {{#if number}}
                        <li>
                            <a href="/user/route-stops/{{number}}/{{type}}">
                                {{number}}
                            </a>
                        </li>
                    {{/if}}
                {{/each}}
            {{/each}}
        {{else}}
            {{#each transport}}
                {{#each this}} 
                    {{#if number}}
                        <li>
                            <a href="/route-stops/{{number}}/{{type}}">
                                {{number}}
                            </a>
                        </li>
                    {{/if}}
                {{/each}}       
            {{/each}}

        {{/if}} 
    </ul>

</div>