{{#if isAdminPage}}
<div class="routes-admin">
    <div class="form-block">
        <h4>Добавить новую поездку</h4>
        <form action="/addtrip" method="post">
            <label for="driver">Водитель:</label>
            <select id="driver" name="driver">
                {{#each driversList}}
                    {{#each this}}
                        <option value="{{this.username}}">
                            {{this.username}}
                        </option>
                    {{/each}}
                {{/each}}
            </select>

            <label for="route">Маршрут:</label>
            <input type="text" id="route" name="route"><br><br>
            <label for="status">Статус:</label>
            <input type="text" id="status" name="status"><br><br>
            <input type="submit" value="Добавить поездку">
        </form>
    </div>

     <div class="form-block">
        <h4>Изменить поездку</h4>
