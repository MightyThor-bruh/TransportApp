            <input type="text" id="status" name="status"><br><br>
            <input type="submit" value="Изменить поездку">
        </form>
    </div>

    <div class="form-block">
        <h4>Удалить поездку</h4>
        <form action="/deletetrip" method="post">
            <label for="driver">Водитель:</label>
            <select id="driver" name="driver">
                {{#each driversList}}
                    {{#each this}}
                        <option value="{{this.username}}">
                            {{this.username}}
                        </option>
                    {{/each}}
                {{/each}}
            </select>

            <label for="route">Маршрут:</label>
            <input type="text" id="route" name="route"><br><br>
            <input type="submit" value="Удалить поездку">
        </form>
    </div>
</div>



{{/if}}